#!/bin/sh

set -e

CONFFILE="/etc/nss-ldapd.conf"

# remove /var/run/nslcd directory
rm -rf /var/run/nslcd

# remove our configuration file (not a conffile) on purge manually
if [ "$1" = "purge" ]
then
  rm -f "$CONFFILE"
fi

# call ldconfig to signal the removal of out NSS library
if [ "$1" = "remove" ]
then
  ldconfig
fi

#DEBHELPER#
